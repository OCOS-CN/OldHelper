<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_margin="25dp"
    android:layout_weight="3"
    android:layout_width="match_parent"
    android:background="@drawable/shape_corner_solid"
    android:orientation="vertical"
    android:layout_height="match_parent">


        <ImageView
            android:id="@+id/moudle_iv"
            android:padding="1dp"
            android:layout_weight="8"
            android:layout_margin="1dp"
            android:scaleType="centerCrop"
            android:layout_height="0dp"
            android:src="@drawable/totoro"
            android:layout_width="match_parent"
            android:text="some"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/shape_corner_top_tag"
            android:layout_height="3dp" />
        <TextView
            android:id="@+id/moudle_tv"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:hint="@string/family_member"
            android:layout_height="0dp" />
</LinearLayout>