<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <android.support.v4.view.ViewPager
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/pager"
        android:layout_width="match_parent" android:layout_height="match_parent"
        tools:context="com.qingluan.darkh.oldhelper.Activities.HistoryInfo" >

        <android.support.v4.view.PagerTitleStrip
            android:id="@+id/pager_title_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

        </android.support.v4.view.PagerTitleStrip>
    </android.support.v4.view.ViewPager>

    <Button
        android:id="@+id/historical_ll_bt"
        android:layout_width="100dp"
        android:text="@string/historical_list"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textSize="30sp"
        android:alpha="0.5"
        android:background="@drawable/shape_spheral_white"
        android:layout_height="300dp" />
    <Button
        android:onClick="chartModeEvent"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        style="@style/ButtonBarButton"
        android:alpha="0.6"
        android:hint="@string/chartMode"
        android:layout_height="40dp" />

</RelativeLayout>
