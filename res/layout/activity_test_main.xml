    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.qingluan.darkh.oldhelper.Activities.TestMainActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.qingluan.darkh.oldhelper.components.MoudleView
                xmlns:custom="http://schemas.android.com/apk/res/com.qingluan.darkh.oldhelper"
                android:id="@+id/test_cc"
                android:layout_width="300dp"
                app:iconSrc="@drawable/ic_launcher"
                android:onClick="clickEvent"
                android:layout_height="400dp">

                </com.qingluan.darkh.oldhelper.components.MoudleView>
            </LinearLayout>

        </ScrollView>

</RelativeLayout>
